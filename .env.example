# Database
DATABASE_URL=postgresql://copi:copi_dev@localhost:5432/copi

# ORCID OAuth
ORCID_CLIENT_ID=
ORCID_CLIENT_SECRET=
ORCID_REDIRECT_URI=http://localhost:3000/api/auth/callback/orcid
# Set to "true" to use ORCID sandbox (sandbox.orcid.org) for development
ORCID_SANDBOX=false

# Claude API
ANTHROPIC_API_KEY=

# AWS (SES for email, SQS for job queue, CloudWatch for logging)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
SES_FROM_EMAIL=notifications@copi.science
# Note: AWS_REGION is also used by the awslogs Docker logging driver
# in docker-compose.prod.yml. On EC2, attach an IAM role with
# logs:CreateLogGroup, logs:CreateLogStream, and logs:PutLogEvents.

# NCBI (PubMed/PMC API key — recommended for higher rate limits)
NCBI_API_KEY=
# NCBI email — optional, sent with ID Converter requests per NCBI guidelines
NCBI_EMAIL=

# NextAuth
NEXTAUTH_SECRET=change-me-to-a-random-secret
NEXTAUTH_URL=http://localhost:3000

# Production deployment (used by docker-compose.prod.yml)
# DOMAIN=copi.sulab.org
# CERTBOT_EMAIL=admin@example.com
# POSTGRES_PASSWORD=change-me-to-a-strong-random-value
# CERTBOT_STAGING=0
